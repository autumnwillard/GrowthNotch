<%= image_tag @student.profile_picture, class: "profile-small" if @student.profile_picture.attached? %>

<h1><%= @student.name %></h1>

<%= link_to "Edit", edit_student_path(@student) %>
<%= button_to "Delete", @student, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this student? This cannot be undone." } %>
<%= link_to "Back", students_path %>
